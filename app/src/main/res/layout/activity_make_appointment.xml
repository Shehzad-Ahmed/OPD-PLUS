<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.thecreators.android.opdplus.MakeAppointmentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/make_appointment_form"
        android:gravity="center"
        android:orientation="vertical">
<ListView
    android:id="@+id/list_item_timing"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
</ListView>
    <DatePicker
        android:id="@+id/appointment_DatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="calendar"
        android:calendarTextColor="@android:color/white"
        android:clickable="true"
        android:visibility="gone"
        >
    </DatePicker>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <Button
        android:id="@+id/appointment_DatePickerSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:visibility="gone"
        />
        <Button
            android:id="@+id/appointment_cancelSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:visibility="gone"/>
        </LinearLayout>
</LinearLayout>

    <ProgressBar
        android:id="@+id/doctor_timing_fetching_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    </LinearLayout>